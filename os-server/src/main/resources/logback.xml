<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <appender name="FILE-EMAIL-SENDER" class="ch.qos.logback.core.FileAppender">
        <file>email-sender-service.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="EmailSenderService" level="ERROR" additivity="false">
        <appender-ref ref="FILE-EMAIL-SENDER"/>
    </logger>
</configuration>